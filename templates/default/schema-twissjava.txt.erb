create keyspace <%=node[:webapp][:keyspace]%>
    with strategy_options = {replication_factor:<%=node[:webapp][:replication_factor]%>}
    and placement_strategy = 'org.apache.cassandra.locator.SimpleStrategy';

update keyspace <%=node[:webapp][:keyspace]%> with strategy_options = {replication_factor:<%=node[:webapp][:replication_factor]%>};

use <%=node[:webapp][:keyspace]%>;

create column family User
    with comparator = UTF8Type
    and default_validation_class = UTF8Type
    and column_metadata = [{
        column_name : password,
        validation_class : UTF8Type}
    ];

create column family Userline
    with comparator = UTF8Type
    and default_validation_class = UTF8Type;

create column family Followers
    with comparator = UTF8Type
    and default_validation_class = UTF8Type;

create column family MiscCounts
    with comparator = UTF8Type
    and default_validation_class = CounterColumnType
    and replicate_on_write = true;

create column family Tweet
    with comparator = UTF8Type
    and column_metadata = [{
        column_name : body,
        validation_class : UTF8Type},
    {    
        column_name : username,
        validation_class : UTF8Type}
    ];

create column family Friends
    with comparator = UTF8Type
    and default_validation_class = UTF8Type;

create column family Timeline
    with comparator = LongType
    and default_validation_class = UTF8Type;
